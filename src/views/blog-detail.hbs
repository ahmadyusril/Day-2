<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <title>Blog Content</title>
</head>
<body>
 <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container my-3">
      <a class="navbar-brand" href="#">
        <img src="image/logo.png" alt="brand-img" />
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item ms-3">
            <a class="nav-link active fw-bolder text-danger" aria-current="page" href="/">Home</a>
          </li>
          {{#if isLogin}}
              <li class="nav-item ms-3">
              <a class="nav-link" href="/blog">Add Project</a>
              </li>
          {{/if}}
        </ul>

        <div class="d-flex">
						<ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
							{{#if isLogin}}
								<li class="nav-item">
									<a
										class="nav-link text-danger active fw-semibold"
										href="#"
									>Hello, {{user}}</a>
								</li>
								<li class="nav-item ms-3">
									<a class="nav-link" href="/logout">Logout</a>
								</li>
							{{else}}
								<li class="nav-item">
									<a class="nav-link" href="/register">Register</a>
								</li>
								<li class="nav-item ms-3">
									<a
										class="nav-link text-danger active fw-semibold"
										href="/login"
									>Login</a>
								</li>
							{{/if}}
						</ul>
						<a class="btn btn-danger" href="/contact">Contact Me</a>
					</div>
      </div>
    </div>
  </nav>
  <!-- End Navbar -->

{{!-- Alert --}}
{{#if messages.success}}
			<div class="alert alert-success" role="alert">
				<div class="container">
					{{messages.success}}
				</div>
			</div>
		{{/if}}

<!-- Content -->
<div class="blog-detail">
	<h1>{{blog.name}}</h1>
	<div class="header-detail">
		<div class="left-header">
			<img src="/image/stray2.png" alt="gambar" id="image" />
		</div>
		<div class="right-header">
			<div class="duration">
				<h2>{{blog.duration}}</h2>
				<p><i class="bx bxs-calendar"></i>{{blog.start_date}}
					-
					{{blog.end_date}}</p>

				<p><i class="bx bx-time-five"></i>{{blog.duration}}</p>
			</div>
			<div class="technologi">
				<h2>Technologies</h2>
				<div class="icon">
					<div>
						{{#if blog.nodejs}}
							<p>
								<i class="bx bxl-nodejs"></i>
								Node Js
							</p>
						{{/if}}
						{{#if blog.reactjs}}
							<p><i class="bx bxl-react"></i>React Js</p>
						{{/if}}
					</div>
					<div>
						{{#if blog.typescript}}
							<p><i class="bx bxl-typescript"></i>Typescript</p>
						{{/if}}
						{{#if blog.nextjs}}
							<p><i class="fa-brands fa-square-js"></i>Next Js</p>
						{{/if}}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="paragraph">
		<p>
			{{blog.description}}
		</p>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
  <!-- End Content -->
  {{!-- <script src="js/getTechnologies.js"></script> --}}
</body>
</html>